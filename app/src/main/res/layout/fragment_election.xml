<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Done: Add node to connect Election ViewModel -->
    <data>
        <variable
            name="electionsViewModel"
            type="com.example.android.politicalpreparedness.election.ElectionsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.android.politicalpreparedness.MainActivity"
        android:layout_margin="@dimen/default_margin">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/fragment_election_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

        <!-- Done: Add Upcoming Election Recycler and Header -->
        <TextView
            android:id="@+id/upcoming_elections_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_election_upcoming_elections_heading_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/upcoming_elections_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/saved_elections_heading"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/upcoming_elections_heading" />

        <!-- Done: Add Saved Election Recycler and Header -->
        <TextView
            android:id="@+id/saved_elections_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_election_saved_elections_heading_text"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintTop_toBottomOf="@id/fragment_election_guideline"
            android:paddingTop="@dimen/default_padding"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/saved_elections_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/saved_elections_heading" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>