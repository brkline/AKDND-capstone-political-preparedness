<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="electionModel"
            type="com.example.android.politicalpreparedness.network.models.Election" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/election_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{electionModel.name}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Election Title" />

    <TextView
        android:id="@+id/election_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/election_title"
        android:text="@{electionModel.electionDay.toString()}"
        tools:text="Election Description"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>